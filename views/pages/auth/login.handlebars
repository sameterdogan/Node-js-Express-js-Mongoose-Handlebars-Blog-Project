<div class="container  px-5 ">
    {{> _flash}}
    {{>_validation}}


    <div class="row row-border my-5 rounded ">
        <div class="col-lg-5 col-md-6 mx-auto col-sm-12">
            <img src="/assets/image/4860253.jpg" class="img-fluid img-responsive" alt="Fotoğraf Görüntülenemiyor.">
        </div>

        <div class="col-lg-5 col-md-6 mx-auto col-sm-12  mt-5 rounded ">
            <form class="" action="/auth/login" method="post">

                <div class="form-group ">
                    <label for="exampleInputEmail1">E-posta</label>
                    <input type="email" name="email" class="form-control specialInput" aria-describedby="emailHelp"
                           value="{{email}}" placeholder="E-posta adresini gir." required>

                </div>

                <div class="form-group">
                    <label for="password">Şifre</label>
                    <input type="password" name="password" class="form-control specialInput " id="password"
                           value="{{password}}" placeholder="Şifreni gir." required>
                </div>

                <p>
                    <a href="/auth/forgot_password" target="_blank">Şifremi unuttum</a>
                </p>
                <button type="submit" id="register" class="btn btn-primary my-3  rounded-pill mr-2 ">Giriş yap</button>
                <!-- <a href="/auth/check_email_send_code" target="_blank">E-posta onay kodu</a>-->

            </form>
        </div>
    </div>


</div>
